# ==========================================
# INFRASTRUCTURE CONFIGURATION (Docker Compose)
# ==========================================

# PostgreSQL (Used to initialize the DB container)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=resume_pipeline

# RabbitMQ (External Host Configuration)
# If RabbitMQ is on your host machine, use 'host.docker.internal' (Mac/Win) or your LAN IP (Linux)
RABBITMQ_HOST=host.docker.internal
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Redis (Internal Docker Service)
# In Docker, we use the service name 'redis'
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# APPLICATION CONFIGURATION (Passed to Containers)
# ==========================================

# LLM API Keys (Required for Worker/API)
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Model Selection
MODEL=gpt-4o
STRONG_MODEL=gpt-4o

# Backend Settings
OUTPUT_BACKEND=weasyprint
OUTPUT_DIR=/app/output
USE_CACHE=true

# Cloud Uploads (Optional)
ENABLE_MINIO=false
MINIO_ENDPOINT=play.min.io
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=resumes
