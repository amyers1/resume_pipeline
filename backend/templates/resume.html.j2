<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ full_name }} - Resume</title>
    <link rel="stylesheet" href="resume.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>{{ full_name }}</h1>
            <div class="role-title">{{ role_title }}</div>
            <div class="contact-info">
                <span>{{ location }}</span> |
                <span>{{ phone }}</span> |
                <span><a href="mailto:{{ email }}">{{ email }}</a></span> |
                <span>{{ linkedin }}</span>
            </div>
        </header>

        <section id="summary">
            <h2>Professional Summary</h2>
            <div class="section-content">
                <p>{{ professional_summary | join(' ') }}</p>
            </div>
        </section>

        <section id="competencies">
            <h2>Core Competencies</h2>
            <div class="section-content">
                <ul class="competency-grid">
                    {% for competency in core_competencies %}
                    <li>{{ competency }}</li>
                    {% endfor %}
                </ul>
            </div>
        </section>

        <section id="experience">
            <h2>Professional Experience</h2>
            <div class="section-content">

                {% for job in experience if not job.is_grouped %}
                <div class="experience-item">
                    <div class="exp-header">
                        <span class="job-title">{{ job.role_title }}</span>
                        <span class="dates">{{ job.start_date }} — {{ job.end_date }}</span>
                    </div>
                    <div class="exp-sub-header">
                        <span class="org">{{ job.organization }}</span>
                        <span class="location">{{ job.location }}</span>
                    </div>
                    <ul class="bullets">
                        {% for bullet in job.bullets %}
                        <li>{{ bullet }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %}

                {% set grouped_items = experience | selectattr('is_grouped', 'equalto', true) | list %}
                {% if grouped_items %}
                <div class="experience-item other-experience">
                    <div class="exp-header">
                        <span class="job-title">Other Relevant Experience</span>
                        <span class="dates">2006 — 2016</span>
                    </div>
                    <div class="exp-sub-header">
                        <span class="org">Various Organizations</span>
                        <span class="location">Various Locations</span>
                    </div>
                    <ul class="bullets">
                        {% for job in grouped_items %}
                            {% for bullet in job.bullets %}
                            <li>{{ bullet }}</li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

            </div>
        </section>

        <section id="education">
            <h2>Education</h2>
            <div class="section-content">
                {% for edu in education %}
                <div class="edu-item">
                    <div class="exp-header">
                        <span class="degree">{{ edu.degree }}</span>
                        <span class="dates">{{ edu.graduation_date }}</span>
                    </div>
                    <div class="institution">{{ edu.institution }} | {{ edu.location }}</div>
                </div>
                {% endfor %}
            </div>
        </section>

        <section id="certifications">
            <h2>Certifications</h2>
            <div class="section-content">
                <ul class="simple-list">
                    {% for cert in certifications %}
                    <li>{{ cert.name }}, {{ cert.issuer }} ({{ cert.date }})</li>
                    {% endfor %}
                </ul>
            </div>
        </section>

        <section id="awards">
            <h2>Awards</h2>
            <div class="section-content">
                <ul class="simple-list">
                    {% for award in awards %}
                    <li>{{ award.title }}{% if award.awarder %}, {{ award.awarder }} {% endif %} {% if award.date %} ({{ award.date }}) {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
</body>
</html>
